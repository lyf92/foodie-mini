/**app.wxss**/
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

.video {
  height: 400rpx;
  width: 100%;
}

.footer {
  margin-top: 40rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  transition: all 300ms ease;
  height: auto;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
  position: fixed;
  bottom: 2rpx;
}

.footer button::after {
  border: none;
}

.footer button {
  background: none;
  width: 100%;
}