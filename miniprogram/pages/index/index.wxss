/**index.wxss**/

.userinfo {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.other-part {
  position: fixed;
  right: 5%;
  display: flex;
  align-items: center;
}

.display_show {
  position: fixed;
  right: 5%;
  top: 12%;
  box-shadow: 0 3rpx 5rpx 3rpx gainsboro;
  width: 30%;
  height: 400rpx;
  background-color: white;
  padding: 10px 30rpx;
  font-size: small;
}

.display_show .item-option {
  margin-top: 20rpx;
}

.display_none {
  display: none;
}

.disable {
  color: #888;
}

.video-box {
  margin: 20rpx 0;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 3rpx 5rpx 3rpx gainsboro;
}

.video-box .video-name-box {
  width: 100%;
}

.video-box .video-name-box .video-name {
  word-break: break-all;
  padding: 20rpx;
}

.video-box .video .fav-box {
  width: 50px;
  height: 50px;
  float: right;
}

.video-box .video cover-image {
  width: 32px;
  height: 32px;
  float: right;
  padding: 20rpx 30rpx;
}
